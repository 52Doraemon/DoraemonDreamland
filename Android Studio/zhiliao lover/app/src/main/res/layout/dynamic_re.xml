<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dynamic_re_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/radius_color_d8d8d8">

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/publish_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_photo"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/profile_photo"
        android:text="用户名"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publish_user_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/profile_photo"
        android:text="2022-01-01 00:00"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/dynamic_discuss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_photo"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:text="内容描述内容描述内容描述内容描述内容描述..."
        android:textSize="22sp"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/dynamic_thumb_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dynamic_discuss"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/thumb_up_style" />

    <TextView
        android:id="@+id/number_thumb_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dynamic_discuss"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/dynamic_thumb_up"
        android:text="2022"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/dynamic_chat_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dynamic_discuss"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/number_chat"
        android:src="@drawable/ic_baseline_chat_bubble_outline_28" />

    <TextView
        android:id="@+id/number_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dynamic_discuss"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:text="2022"
        android:textSize="24sp" />
</RelativeLayout>