<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/radius_color_d8d8d8">

    <TextView
        android:id="@+id/main_dynamic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/main_dynamic_img"
        android:ellipsize="end"
        android:lines="1"
        android:text="推荐攻略标题"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/main_dynamic_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_dynamic_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/main_dynamic_img"
        android:ellipsize="end"
        android:lines="2"
        android:text="内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述" />

    <ImageView
        android:id="@+id/main_dynamic_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/main_dynamic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_dynamic_value"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="2022-6-12 | xxx评论"
        android:textSize="12sp" />

</RelativeLayout>