<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:background="@color/white"
    >

    <CheckBox
        android:id="@+id/re_re_check"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/re_re_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/re_re_check"
        android:src="@drawable/ic_food1" />

    <TextView
        android:id="@+id/re_re_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/re_re_img"
        android:text="餐饮" />

    <LinearLayout
        android:id="@+id/re_re_pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/re_re_pay_type_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-00.00"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#b30000"
            android:layout_gravity="end"
            />

        <TextView
            android:id="@+id/re_re_pay_type_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:textColor="#b3b3b3"
            android:text="我的微信" />

    </LinearLayout>

</RelativeLayout>