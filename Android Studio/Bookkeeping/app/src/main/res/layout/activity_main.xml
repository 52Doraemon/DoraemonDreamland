<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/navi"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme_color">

        <TextView
            android:id="@+id/select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/select_all_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#ff3333"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:text="删除"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="RtlHardcoded" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/zic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/property_background"
        android:padding="20dp">

        <TextView
            android:id="@+id/property_txp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额"
            android:textColor="@color/addrecord_select_background1"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/zhuye_zic_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/property_txp"
            android:src="@drawable/ic_property_eye" />

        <TextView
            android:id="@+id/zhuye_net_asset_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_txp"
            android:text="0.00"
            android:textColor="@color/addrecord_select_background1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/zhuye_zongzhichu_shuju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="总支出  0.00"
            android:textColor="@color/addrecord_select_background1"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/zhuye_zongshouru_shuju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="总收入  0.00"
            android:textColor="@color/addrecord_select_background1"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_rw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zic" />

    <TextView
        android:id="@+id/record_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="点击右下方按钮添加数据吧！"
        android:textColor="@color/theme_color"
        android:textStyle="bold"
        android:textSize="16sp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/ic_add" />

</RelativeLayout>